{
  "name": "Cine2Nerdle Helper",
  "description": "A training assistant for Cine2Nerdle Battle - shows connection options without auto-playing",
  "version": "1.1.0",
  "manifest_version": 3,
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.themoviedb.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.cinenerdle2.app/battle*",
        "https://cinenerdle2.app/battle*"
      ],
      "css": ["src/styles.css"],
      "js": ["src/content-script.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
